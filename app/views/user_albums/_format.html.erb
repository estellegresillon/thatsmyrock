<% if c.digital == false %>
  <%= simple_form_for c, remote: true do |f| %>
    <%= f.input :digital, as: :hidden, input_html: { value: true } %>
    <%= f.submit "", data: {toggle: "tooltip", original_title: "Digital"}, class: "digitalB off"%>
  <% end %>
<% else %>
  <%= simple_form_for c, remote: true do |f| %>
    <%= f.input :digital, as: :hidden, input_html: { value: false } %>
