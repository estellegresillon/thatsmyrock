<div class="cards" id="albums_id">
    <% index = 1 %>
    <% @albums.each_with_index do |b, i| %>
    <div class="card-bg">
      <% if b.photo_cover.present? %>
        <div class="card box" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path b.photo_cover, crop: :fill %>'); background-position: center;">
      <% else %>
        <% index =  i + 11 %>
        <% url = "https://source.unsplash.com/collection/1068/5#{index}x5#{index}" %>
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= url %>'); background-position: center;">
      <% end  %>
      <h2><%= b.artist.name %></h2>
      <p><%= link_to b.name, album_path(b.id) %></p>
      <p><%= b.rank %></p>
    </div>
    </div>
    <% end %>
  </div>
