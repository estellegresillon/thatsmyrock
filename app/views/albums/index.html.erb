<div class="banner-home" style="background: -webkit-linear-gradient(top, rgba(0,0,0,0.4) 0%,rgba(0,0,0,0.6) 50%,rgba(0,0,0,0.8) 100%), url('https://cdn-images-1.medium.com/max/1456/1*OU0I3b6SoXyvAGfTQnGoLg.jpeg'); height: 70vh; background-position: center;">
  <div class="banner-content">
    <h1>Experience the best music.</h1>
    <h2>We record the best albums ever made accross the world</h2>
    <div class="searchbar-index">
    <div class="searchbar-home animate fadeIn">
      <%= form_tag albums_path, method: "get" do %>
        <%= text_field_tag :name , params[:name], class: "form-control", placeholder: "Name or Artist", id: 'searchbar-band' %>
        <%= select_tag :music_style, raw("<option> </option> <option>Rock</option> <option>Rap</option> <option>Soul</option> <option>Electronic</option> <option>Reggae</option>" ) %>
        <%#= select_tag :year, raw("<option> </option> <option value= 1967 1950 2010 >1950s</option> <option></option>") %>
        <%= select_tag :decade, options_for_select([["All"," "], ["1950s", 1950], ["1960s", 1960], ["1970s", 1970], ["1980s", 1980], ["1990s", 1990], ["2000s", 2000], ["2010s", 2010]]) %>

        <%= submit_tag "Discover", class: "btn-search" %>
      <% end %>
    </div>
    </div>
  </div>
</div>

<div class="top365">
  <div class="card-content">
    <% index = 1 %>
    <% @albums.each_with_index do |album, i| %>
    <div class="card-bg">
      <% if album.photo_cover.present? %>
        <div class="card box" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= cl_image_path album.photo_cover, crop: :fill %>'); background-position: left, width: 20%;">
      <% else %>
        <% index =  i + 11 %>
        <% url = "https://source.unsplash.com/collection/1068/5#{index}x5#{index}" %>
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= url %>'); background-position: left, width: 20%;">
      <% end  %>
      <h2><%= album.artist.name %></h2>
      <p><%= link_to album.name, album_path(album.id) %></p>
      <p><%= album.rank %></p>
      <div class="iconsindex">
        <% unless current_user.albums.include?(album) %>
          <%= link_to album_user_albums_path(album, user_album: { status: "wishlist" }), method: :post do %>
            <i class="far fa-heart"></i>
          <% end %>
          <%= link_to album_user_albums_path(album, user_album: { status: "collected" }), method: :post do %>
            <i class="far fa-star"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    </div>
    <% end %>
  </div>
</div>
