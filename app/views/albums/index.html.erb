<div class="banner-home" style="background: -webkit-linear-gradient(top, rgba(0,0,0,0.4) 0%,rgba(0,0,0,0.6) 50%,rgba(0,0,0,0.8) 100%), url('https://cdn-images-1.medium.com/max/1456/1*OU0I3b6SoXyvAGfTQnGoLg.jpeg'); height: 80vh; background-position: center;">
  <div class="banner-content">
    <h1>Experience the best music.</h1>
    <h2>We record the best albums ever made accross the world</h2>
    <div class="searchbar-index">
    <div class="searchbar-home animate fadeIn">
      <%= form_tag albums_path, remote: true, method: "get" do %>
        <%= text_field_tag :name , params[:name], class: "form-control", placeholder: "Search for an album, an artist or a year", id: 'searchbar-band' %>
        <%= select_tag :music_style, raw("<option></option> <option>Rock</option> <option>Rap</option> <option>Soul</option> <option>Electronic</option> <option>Reggae</option>" ) %>
        <%= select_tag :decade, options_for_select([["All"," "], ["1950s", 1950], ["1960s", 1960], ["1970s", 1970], ["1980s", 1980], ["1990s", 1990], ["2000s", 2000], ["2010s", 2010]]) %>

        <%= submit_tag "Discover", class: "btn-search" %>
      <% end %>
    </div>
    </div>
  </div>
</div>

<div class="top365">
  <%= render 'albums/albums_card' %>
</div>
